<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <packageSourceMapping>
    <packageSource key="nuget.org">
      <!-- Map the linker task explicitly -->
      <package pattern="Microsoft.NET.ILLink.Tasks" />
      <!-- Safe broad mapping to catch other Microsoft packages -->
      <package pattern="Microsoft.*" />
      <!-- Or, if you intend everything to come from nuget.org, include: -->
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
