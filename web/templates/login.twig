{% extends "main.twig" %}

{% block title %}{{'login'|trans}}{% endblock %}
{% block content %}
	<div class="d-flex">
		<div class="card m-auto">
			<form method="post" class="card-body">
				<fieldset>
					<legend>{{'auth.login-to-reon'|trans}}</legend>
					{% if login_fail %}
						<div class="alert alert-danger" role="alert">
							{{'auth.invalid-email-pass'|trans}}
						</div>
					{% endif %}
					<div class="mb-3">
						<label for="email" class="form-label">{{'email-addr'|trans}}</label>
						<input type="email" id="email" name="email" required class="form-control">
					</div>
					<div class="mb-3">
						<label for="password" class="form-label">{{'password'|trans}}</label>
						<input type="password" id="password" name="password" required class="form-control">
					</div>
					<button type="submit" class="btn btn-primary me-2">{{'login'|trans}}</button>
					<a href="/forgot_password.php" class="btn btn-outline-primary">{{'forgot-password'|trans}}</a>
				</fieldset>
			</form>
		</div>
	</div>
{% endblock %}